@page
@model ToDoApplication_RazorPages.Pages.TodoItems.IndexModel

@if (TempData["success"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.success('@TempData["success"]');
    </script>
}

@if (TempData["error"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.error('@TempData["error"]');
    </script>
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-dark">To Do List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Create" class="btn btn-dark">
                <i class="bi bi-plus-circle"></i> &nbsp; Add Task
            </a>
        </div>
    </div>
</div>
<br />
<table class="table table-bordered table-striped" width="100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Date
            </th>
            <th>
                Priority
            </th>
            <th>
                Done
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.TodoItems)
        {
            <tr>
                <td width="20%">
                    @obj.Name
                </td>
                <td width="20%">
                    @obj.Description
                </td>
                <td width="20%">
                    @obj.DateAndTime
                </td>
                <td width="20%">
                    @obj.Priority
                </td>
                <td width="20%">
                    @obj.isDone
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="Update" asp-route-id="@obj.Id" class="btn btn-dark mx-2 text-center">
                            <i class="bi bi-pencil-square"></i> &nbsp; Edit
                        </a>
                        <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 text-center">
                            <i class="bi bi-trash"></i> &nbsp; Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>