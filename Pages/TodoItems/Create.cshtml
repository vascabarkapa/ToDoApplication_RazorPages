@page
@model ToDoApplication_RazorPages.Pages.TodoItems.CreateModel

<form method="post">
    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-dark">Add new Task</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.TodoItem.Name"></label>
            <input asp-for="@Model.TodoItem.Name" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.TodoItem.Description"></label>
            <input asp-for="@Model.TodoItem.Description" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.TodoItem.DateAndTime"></label>
            <input asp-for="@Model.TodoItem.DateAndTime" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.TodoItem.Priority"></label>
            <select asp-for="@Model.TodoItem.Priority" class="form-select" aria-label="Priority">
                <option value="" selected>Select a priority</option>
                <option value="High">High</option>
                <option value="Medium">Medium</option>
                <option value="Low">Low</option>
            </select>
        </div>
        <div class="mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="@Model.TodoItem.isDone">
                <label class="form-check-label" asp-for="@Model.TodoItem.isDone"></label>
            </div>
        </div>
        <button type="submit" class="btn btn-dark" style="width:150px">
            Add
        </button>
        <a class="btn btn-danger" style="width:150px">
            Back to List
        </a>
    </div>
</form>